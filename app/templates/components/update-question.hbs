

<h3>Edit Question</h3>
<div>
  <form>
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author"}}
    </div>
    <div class="form-group">
      <label for="body">Question</label>
      {{input value=body id="body"}}
    </div>
    <div class="form-group">
      <label for="notes">Elaboration</label>
      {{textarea value=notes id="notes"}}
    </div>
    <button {{action 'update' question}}>Remix</button>
  </form>
</div>
